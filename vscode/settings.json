{
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.semanticHighlighting.enabled": true,
    "editor.fontSize": 12,
	"editor.fontFamily": "Inter, MesloLGS NF, Menlo, Monaco, 'Courier New', monospace",
    "editor.formatOnSave": false,
    "editor.snippetSuggestions": "top",
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggest.showWords": false,
    "editor.suggest.showKeywords": false,

    "workbench.colorTheme": "Monokai Pro (Filter Machine)",
    "workbench.iconTheme": "Monokai Pro (Filter Machine) Icons",
    "markdown-preview-enhanced.previewMode": "Multiple Previews",
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.showTabs": "multiple",
    "workbench.editor.tabActionLocation": "right",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 7,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.enablePreview": false,

    "python.formatting.provider": "none",
    "ruff.importStrategy": "fromEnvironment",
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSaveMode": "file",
        "editor.formatOnPaste": false
    },

    "indentRainbow.indicatorStyle": "light",
    "indentRainbow.lightIndicatorStyleLineWidth": 3,
    "markdown-preview-enhanced.previewTheme": "atom-dark.css",
    "markdown-preview-enhanced.codeBlockTheme": "xonokai.css",
    "markdown.preview.openMarkdownLinks": "inEditor",
	"files.exclude": {
        "**/.git": false,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "logFileHighlighter.customPatterns": [
        {
            "pattern": "^Conversation Log of .*?$",
            "foreground": "#A6E22E",
            "fontStyle": "bold"
        },
        {
            "pattern": "^-{50,}\\s*$",
            "foreground": "#888888"
        },
        {
            "pattern": "^\\[USER\\]",
            "foreground": "#50FA7B",
            "fontStyle": "bold"
        },
        {
            "pattern": "^\\[ASSISTANT\\]",
            "foreground": "#FF5555",
            "fontStyle": "bold"
        },
    ],
    "editor.inlayHints.enabled": "off"
}

